---
import features from "../json/about.json";
---

<div class="my-4 p-2 flex flex-col md:flex-row gap-6">
  {
    features.map((feature) => (
      <div class="w-full md:w-1/3">
        <div class="flex mb-4">
          <span class="text-gray-400 text-base sm:text-xl">{feature.number}</span>
          <h3 class="pl-2 text-base sm:text-xl font-light tracking-widest uppercase">{feature.title}</h3>
        </div>
        <div>
          <p class="text-gray-400 text-xs sm:text-sm font-light leading-6">{feature.description}</p>
        </div>
      </div>
    ))
  }
</div>
